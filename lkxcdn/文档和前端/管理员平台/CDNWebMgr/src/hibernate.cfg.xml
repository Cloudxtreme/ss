<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

<session-factory>
	<property name="dialect">
		org.hibernate.dialect.MySQL5Dialect
	</property>
	<property name="connection.url">
		jdbc:mysql://127.0.0.1:3306/cdn?characterEncoding=gbk
	</property>
	<property name="connection.username">root</property>
	<property name="connection.password">172537</property>
	<property name="connection.driver_class">
		com.mysql.jdbc.Driver
	</property>
	<!-- 开发完成后记得改为false -->
	<property name="show_sql">false</property>
	<!-- 最小连接数 -->
  	<property name="hibernate.connection.provider_class">
		org.hibernate.connection.C3P0ConnectionProvider
	</property>
	<property name="c3p0.min_size">7</property>
	<!-- 最大连接数 -->
	<property name="c3p0.max_size">42</property>
	<!-- 获得连接的超时时间,如果超过这个时间,会抛出异常，单位毫秒 -->
	<property name="c3p0.timeout">1800</property>
	<!-- 最大的PreparedStatement的数量 -->
	<property name="c3p0.max_statements">50</property>
	<!-- 每隔120秒检查连接池里的空闲连接 ，单位是秒-->
	<property name="c3p0.idle_test_period">60</property>
	<!-- 当连接池里面的连接用完的时候，C3P0一下获取的新的连接数 -->
	<property name="c3p0.acquire_increment">1</property>  
	<mapping resource="com/cdn/ado/Admin.hbm.xml" />
</session-factory>
</hibernate-configuration>